<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@drawable/edit_bg"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAnswer_userNameTextviewid"
        android:text="Md Sohrab Hossain Sohel"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <TextView
        android:layout_below="@+id/userAnswer_userNameTextviewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userAnswer_timeSpentTextviewid"
        android:text="Md Sohrab Hossain Sohel"
        android:textSize="17sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/userAnswer_markTextviewid"
        android:textAlignment="textEnd"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="25sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/userAnswer_userNameTextviewid"
        />
</RelativeLayout>