<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="10dp"
    android:padding="10dp">



    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/question_list_QuestionTextviewid"
           android:padding="10dp"
           android:textSize="20sp"
           android:textStyle="bold"
           android:textColor="#000"
           android:text="What is Database Management System"
           />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="7dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Option 1"
                android:id="@+id/question_list_Option1Textview"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="7dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Option 2"
                android:id="@+id/question_list_Option2Textview"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="7dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Option 3"
                android:id="@+id/question_list_Option3Textview"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="7dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Option 4"
                android:id="@+id/question_list_Option4Textview"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#000"
                android:id="@+id/question_list_AnswerNumberTextview"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>