<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAlignment="center"
       android:textSize="22sp"
       android:textColor="#000"
       android:text="Publish Quiz"
       android:textStyle="bold"
       android:id="@+id/pb_header"
       />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_header"
        android:layout_marginTop="15dp"
        android:text="Select Class"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/pb_txt1"
        />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_txt1"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg"
        android:id="@+id/publishQuizClassSpinnerid"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publishQuizClassSpinnerid"
        android:layout_marginTop="15dp"
        android:text="Select Quiz Time"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/pb_txt2"
        />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_txt2"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg"
        android:id="@+id/publishQuiz_QuizTimeSpinnerid"
        />

    <Button
        android:id="@+id/publishQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="Publish"
        android:textAllCaps="false"
        android:layout_below="@+id/publishQuiz_QuizTimeSpinnerid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />



</RelativeLayout>